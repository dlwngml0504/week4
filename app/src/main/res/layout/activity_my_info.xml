<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juhee.project4.MyInfo">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY INFO"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView" />

        <TextView
            android:layout_below="@+id/textView"
            android:layout_margin="9dp"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="  NAME"
            android:textSize="15dp"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:background="#BDBDBD"
            android:id="@+id/textView2" />


        <TextView
            android:layout_margin="9dp"
            android:padding="3dp"
            android:textSize="15dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/userName"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="9dp"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text=" MONEY"
            android:textSize="15dp"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:background="#BDBDBD"
            android:id="@+id/textView3" />

        <TextView
            android:layout_marginLeft="18dp"
            android:padding="3dp"
            android:textSize="15dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_below="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/userMoney"
            android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Ranking"
        android:id="@+id/rankBtn"
        android:layout_gravity="left|bottom" />

    <Button
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="My Item"
        android:id="@+id/itemBtn"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_toRightOf="@id/rankBtn"/>


    <ListView
        android:layout_marginTop="5dp"
        android:background="@drawable/back"
        android:layout_below="@+id/rankBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userRanking"
        android:layout_alignParentStart="true"
        android:visibility="visible"/>

    <ListView
        android:layout_marginTop="5dp"
        android:background="@drawable/back"
        android:layout_below="@+id/rankBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userItem"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>



</RelativeLayout>
