<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juhee.project4.CameraView"
    android:id="@+id/camview">
    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:id="@+id/ll"
        android:layout_alignBottom="@+id/texture"></LinearLayout>

    <Button
        android:id="@+id/store_btn"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/market_stand"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/close_btn" />
    <Button
        android:id="@+id/close_btn"
        android:layout_width="30dp"
        android:layout_marginTop="3dp"
        android:layout_height="30dp"
        android:background="@drawable/error"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/cash_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/money"
        android:layout_below="@+id/store_btn"
        android:layout_alignStart="@+id/store_btn"
        android:text="    $000"/>
    <Button
        android:id="@+id/item1"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/item2"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/item1"
        android:layout_toEndOf="@+id/item1" />
    <Button
        android:id="@+id/item3"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/item1"
        android:layout_toEndOf="@+id/item2" />
    <Button
        android:id="@+id/item4"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/item1"
        android:layout_toEndOf="@+id/item3" />
    <Button
        android:id="@+id/item5"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/item1"
        android:layout_toEndOf="@+id/item4" />
    <Button
        android:id="@+id/item6"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/item1"
        android:layout_toEndOf="@+id/item5" />
    <Button
        android:id="@+id/item7"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/item1"
        android:layout_toEndOf="@+id/item6" />
    <Button
        android:id="@+id/item8"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/item1"
        android:layout_toEndOf="@+id/item7" />

</RelativeLayout>
